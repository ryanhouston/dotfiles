      "chmod +x *": "ask",
      "curl *": "allow",
      "wget *": "allow",
      "git *": "allow",
      "npm *": "allow",
      "yarn *": "allow",
      "pnpm *": "allow",
      "node *": "allow",
      "python *": "allow",
      "pip *": "allow",
      "ls": "allow",
      "pwd": "allow",
      "cat": "allow",
      "head": "allow",
      "tail": "allow"
